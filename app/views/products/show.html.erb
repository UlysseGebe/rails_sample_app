<p id="notice"><%= notice %></p>

<h1>
  <strong>Titre:</strong
  <%= @product.title %>
</h1>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Prix:</strong>
  <%= @product.price %>
</p>

<ul>
    <%- @product.comments.each do |comment| %>
        <li>
           <%= comment.body %>
        </li>
    <% end %>
</ul>

<%= link_to 'Comment Panel', product_comments_path(@product) %>
