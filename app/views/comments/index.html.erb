<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.product_id %></td>
        <td><%= link_to 'Show', product_comment_path(@product, comment) %></td>
        <td><%= link_to 'Edit', edit_product_comment_path(@product, comment) %></td>
        <td><%= link_to 'Delete', [comment.product, comment], :method => :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_product_comment_path %>
